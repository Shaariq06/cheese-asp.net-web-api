@model IEnumerable<MVCWebApplication.Models.DTO.CheeseDTO>

<h1 class="mt-3">Cheese</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Country</th>
            <th>Price Price Kilo</th>
            <th>Stinkiness Rating</th>
            <th>Aged</th>
            <th>Pairing Suggestion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cheese in Model)
        {
            <tr>
                <td>@cheese.Name</td>
                <td>@cheese.Type</td>
                <td>@cheese.Country</td>
                <td>@cheese.PricePerKilo.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</td>
                <td>@(cheese.StinkinessRating == null ? "Not Provided" : cheese.StinkinessRating)</td>
                <td>@(cheese.Aged == true ? "Yes" : cheese.Aged == false ? "No" : "Not Provided")</td>
                <td>@(cheese.PairingSuggestion == null ? "Not Provided" : cheese.PairingSuggestion)</td>
            </tr>
        }
    </tbody>
</table>
